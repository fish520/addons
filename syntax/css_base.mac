'HTML Tags
rCssRegion.AddWord( css_creator.CreateWord(COLOR_WORD3, "A ABBR ADDRESS AREA ARTICLE ASIDE AUDIO BASE BDO BLOCKQUOTE BODY BR BUTTON CANVAS CAPTION CITE CODE COL COLGROUP COMMAND DATALIST DD DEL DETAILS DFN DIV DL DT EM EMBED FIELDSET FIGCAPTION FIGURE FOOTER FORM H1 H2 H3 H4 H5 H6 HEAD HEADER HGROUP HR HTML I IFRAME IMG INPUT INS KEYGEN KBD LABEL LEGEND LI LINK MAP MARK MENU META METER NAV NOSCRIPT OBJECT OL OPTGROUP OPTION OUTPUT P PARAM PRE PROGRESS Q RP RT RUBY SAMP SCRIPT SECTION SELECT SMALL SOURCE SPAN STRONG STYLE SUB SUMMARY SUP TABLE TBODY TD TEXTAREA TFOOT TH THEAD TIME TITLE TR U UL VAR VIDEO", False, "-") )

'Class
rCssRegion.AddItem( css_creator.CreateItem(COLOR_WORD2, "\.[\w-]+",False ) )

'Fake class
rCssRegion.AddItem( css_creator.CreateItem(COLOR_WORD2, "::?[\w-]+",False ) )

'Id
rCssRegion.AddItem( css_creator.CreateItem(COLOR_WORD3, "#[\w+-]+",False ) )

'@
rCssRegion.AddItem( css_creator.CreateItem(COLOR_WORD3, "@[\w+-]+",False ) )

'number
rCssRegion.AddItem( css_creator.CreateItem(COLOR_NUMBER, "\b([0-9]+(\.)?[0-9]*(em|px|mm|pt|deg|s|%)?)|#[a-fA-F0-9]+\b", False) )

'special Predefined values that conflict with the Properties
rCssRegion.AddItem( css_creator.CreateItem(COLOR_WORD2, "(?<=\s*:\s*)(bottom|left|right|top|pre|sub|sup)(?=\s*;|\s*$)",False ) )

rCssRegion.AddItem( css_creator.CreateItem( COLOR_STRING1, "(?<=url\().*(?=\))", False ) )

'emphasize the !important mark
rCssRegion.AddWord( css_creator.CreateWord(COLOR_MACRO, "!important",False, "!" ) )

rCssRegion.AddSnippet "css.snippet"

rCssRegion.SetPairs( "()[]{}""""''" )
rCssRegion.CommentBlock "/*", "*/"
rCssRegion.FoldText "\{", False, "\}", False
rCssRegion.IndentText "{$", False, "^\s*}$", False
